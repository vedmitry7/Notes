<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_section_position"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.dmitryvedmed.taskbook.ui.SectionPositionActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/section_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fab_size_normal"
        android:background="#ffc107"
        app:titleTextColor="#FFFFFF"
        app:title="@string/section_position">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/section_position_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>
