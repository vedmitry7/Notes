<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@drawable/dialod_bg_shape"
    android:layout_width="wrap_content">


    <ScrollView
        android:id="@+id/activity_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context="com.example.dmitryvedmed.taskbook.ui.SimpleNoteDialogActivity"
        android:weightSum="1">

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <TextView
                android:text="ert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:alpha="67"
                android:id="@+id/headTextView"
                android:textSize="17sp"
                android:textStyle="normal|bold" />

            <TextView
                android:paddingTop="5dp"
                android:text="rey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:alpha="67"
                android:id="@+id/contextTextView"
                android:textSize="17sp" />

        </LinearLayout>


    </ScrollView>

