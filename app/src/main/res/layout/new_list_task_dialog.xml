<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="2dp"
    >



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context="com.example.dmitryvedmed.taskbook.ui.ListTaskActivity">

        <TextView
            android:layout_marginTop="5dp"

            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/listTaskDialogHeadTextView"
            android:textSize="17sp"
            android:textStyle="normal|bold" />


        <android.support.v7.widget.RecyclerView
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:id="@+id/list_dialog_activity_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            />
    </LinearLayout>

    <LinearLayout style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        android:layout_gravity="end"
        android:paddingRight="0dp"
        >


        <Button style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/dialogBtnEdit"
            android:onClick="edit"
            android:text="Править"
            android:layout_marginRight="2dp"/>

        <Button style="?android:attr/buttonBarButtonStyle"
            android:text="Убрать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/dialogBtnOK"
            android:onClick="ok"
            />
        <Button style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/dialogBtnLeave"
            android:onClick="leave"
            android:text="Оставить"
            android:layout_marginRight="2dp"/>
    </LinearLayout>
</LinearLayout>