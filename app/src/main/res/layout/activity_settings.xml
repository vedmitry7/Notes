<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fab_size_normal"
        android:background="#00000000"
        android:title="Настройки">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:paddingLeft="16dp"

        android:text="Внешний вид"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold" />

    <View style="@style/Divider2"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp">

        <TextView
            android:paddingLeft="16dp"

            android:text="Разметка"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView43"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View style="@style/Divider"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:id="@+id/taskFont">

        <TextView
            android:paddingLeft="16dp"

            android:text="Размер шрифта заметки"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView431"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textTaskFontValue"/>

        <SeekBar
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textTaskFontValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="16"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTaskFontValue"/>
    </RelativeLayout>

    <View style="@style/Divider"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="onClick"
        android:id="@+id/cardFont">

        <TextView
            android:paddingLeft="16dp"
            android:text="Размер шрифта карточки"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4313"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="16"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCardFontValue"/>

    </RelativeLayout>

</LinearLayout>

